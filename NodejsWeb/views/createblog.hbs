<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1>Create Blog</h1>
        <form action="/blogs" method="post">
            <fieldset>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="blogTitle" name="title" placeholder="Enter title" required>
                </div>
                <div class="form-group">
                    <label for="des">Description</label>
                    <input type="text" class="form-control" id="blogDescription" name="des" placeholder="des">
                </div>
                <button type="button" class="btn btn-primary" onclick="sendCreateRequest()">Submit</button>
                <a href="/blogs/0" type="button" class="btn btn-warning ">Cancel</a>
            </fieldset>
        </form>
    </div>
</body>
<script>
        function sendCreateRequest() {
        const title = document.getElementById("blogTitle").value.toString()
        const description = document.getElementById("blogDescription").value.toString()
        fetch('http://localhost:5555/blogs', {method: "POST",headers: {'Content-type': 'application/json'}, body: JSON.stringify({ title: title, description: description})}).then(res => res.json()).then(data => {
            location.href = "/blogs/0"
        })
    }
</script>
</html>